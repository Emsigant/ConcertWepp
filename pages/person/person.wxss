/* pages/person/person.wxss */
.header {
	height: 6rem;
	background: #17b4bb;
	padding: 0 1rem;
	display: flex;
	align-items: center;
}
.user-avatar {
	height: 3.5rem;
	width: 3.5rem;
	border-radius: 50%;
	margin: 0 1rem;
}
.user-nickname {
	color: #fff;
	font-size: .9rem;
}
.col-list {
	display: flex;
	flex-direction: column;
	width: 100%;
	color: #707070;
	font-size: .9rem;
}
.col-list-item {
	display: flex;
	width: 100%;
	padding: 0 1rem;
	align-items: center;
	box-sizing: border-box;
}
.col-list-item:active {
	background: #eee;
}
.col-list-item-icon {
	width: 2rem;
	height: 2rem;
}
.col-list-item-title {
	line-height: 3.6rem;
	flex: 1;
	margin-left: .5rem;
}
.col-list-item-anchor {
	width: 1.2rem;
	height: 1.2rem;
}


.line {
	height: 1rpx;
	background: #ccc;
	margin: 0 1rem;
	transform: scaleY(0.5);
  transform-origin:0 0;
}