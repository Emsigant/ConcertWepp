/* pages/ticket/ticket.wxss */

.ticket-list {
  display: flex;
  flex-direction: column;
}

.ticket {
  display: flex;
  flex-direction: row;
  padding: 1rem;
}

.ticket-image {
  width: 160rpx;
  height: 220rpx;
  border-radius: 8rpx;
  flex: none;
}
.ticket-text {
  margin-left: 0;
}
.ticket-text-title {
  color: #707070;
  margin-bottom: .25rem;
}
.ticket-text-time {
  color: #a3a3a3;
  font-size: .9rem;
  margin-bottom: .25rem;
}
.ticket-text-status {
  color: #17b4bb;
  font-size: .9rem;
}
